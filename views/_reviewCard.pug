mixin reviewCard(comment)
  .reviews__card
    .reviews__avatar
      //- img.reviews__avatar-img(src=`/img/users/${comment.photo}`, alt=`${comment.name}`)
      h6.reviews__user= comment.name
    p.reviews__text= comment.text
    .reviews__rating
      each star in [1, 2, 3, 4, 5]
        svg.reviews__star(class=`reviews__star--${comment.rating >= star ? 'active' : 'inactive'}`)
          use(xlink:href='/img/icons.svg#icon-star')